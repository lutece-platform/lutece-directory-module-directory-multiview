<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >

	<!-- Directory-Multiview Service -->
	<bean id="directory-multiview.directoryMultiviewService" class="fr.paris.lutece.plugins.directory.modules.multiview.service.DirectoryMultiviewService"/>
	
    <!-- IdentityService -->
    <bean id="directory-multiview.identitystore.httpTransport" class="fr.paris.lutece.plugins.identitystore.web.rs.service.IdentityTransportRest">
        <property name="IdentityStoreEndPoint">
            <value>http://localhost:8080/identitystore/rest/identitystore</value>
        </property>
    </bean>
    <bean id="directory-multiview.identitystore.service" class="fr.paris.lutece.plugins.identitystore.web.service.IdentityService">
        <constructor-arg ref="directory-multiview.identitystore.httpTransport"/>
    </bean>
    
</beans>
